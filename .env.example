# =====================================================
# Dating App Environment Variables
# =====================================================
# Copy this file to .env.local and fill in your values
# =====================================================

# Supabase Configuration (REQUIRED)
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI API Key (REQUIRED for Phase 3 - Content Moderation)
# Sign up at: https://platform.openai.com
# Note: Moderation API is 100% FREE - no charges!
OPENAI_API_KEY=sk-your-openai-key-here

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Stripe Configuration (Optional - for premium subscriptions)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# Email Service (Optional - for notifications)
RESEND_API_KEY=your_resend_api_key

# File Upload Service (Optional - if using Cloudinary instead of Supabase)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Google Maps API (Optional - for location autocomplete)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=your_google_analytics_id

# Tenor GIF API (Optional - for GIF picker in messages)
# Get free key at: https://developers.google.com/tenor
NEXT_PUBLIC_TENOR_API_KEY=your_tenor_key

# Spotify API (Optional - for music integration)
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Google Gemini AI (Optional - for blog generation)
GOOGLE_GEMINI_API_KEY=your_google_gemini_api_key

# Unsplash API (Optional - for blog post images)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key

# =====================================================
# Redis Configuration (REQUIRED FOR PRODUCTION)
# =====================================================
# Required for production rate limiting across multiple servers
# Get FREE Redis at: https://upstash.com (10,000 commands/day free tier)
#
# Setup Instructions:
# 1. Go to https://upstash.com and create free account
# 2. Create new Redis database
# 3. Go to database details page
# 4. Copy "UPSTASH_REDIS_REST_URL" and "UPSTASH_REDIS_REST_TOKEN"
# 5. Paste values below
#
# Note: Optional for local development (will use in-memory fallback)
#       REQUIRED for production deployment (Vercel/AWS/etc)
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_rest_token 